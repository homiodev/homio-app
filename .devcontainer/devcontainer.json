{
	"name": "intellij-playground-dev-container",

	"build": {
		"dockerfile": "Dockerfile"
	},

	"features": {

		// The latest "java" Dev Container feature releases: https://github.com/devcontainers/features/pkgs/container/features%2Fjava
		"ghcr.io/devcontainers/features/java:1.1.1": {
			"version": "17",
			"installMaven": "false",
			"installGradle": "false"
		},

		// The latest "sshd" Dev Container feature releases: https://github.com/devcontainers/features/pkgs/container/features%2Fsshd
		// The "SSH server (sshd)" feature source code: https://github.com/devcontainers/features/tree/main/src/sshd
		"ghcr.io/devcontainers/features/sshd:1.0.6": {
		}
	}

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "java -version",

	// Configure tool-specific properties.
	// "customizations": {
	// }

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
