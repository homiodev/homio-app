{
  "package": {
    "name": "${project.name}",
    "repo": "TouchHome",
    "subject": "touchhome",
    "website_url": "${project.url}",
    "issue_tracker_url": "${github.url}/issues",
    "vcs_url": "${github.url}",
    "licenses": ["MIT"],
    "labels": ["Smart Home"],
    "public_download_numbers": true,
    "public_stats": true
  },
  "version": {
    "name": "${project.version}",
    "released": "${maven.build.timestamp}",
    "vcs_tag": "${project.version}"
  },
  "files":
  [
    {"includePattern": "pom.xml", "uploadPattern": "*"},
    {"includePattern": "target/(.*\.jar)", "uploadPattern": "*"}
  ],
  "publish": true
}